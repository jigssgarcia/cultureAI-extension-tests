{
  "name": "cultureai-extension-tests",
  "version": "1.0.0",
  "description": "Automated test suite for CultureAI Browser Extension using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @P1",
    "test:regression": "playwright test --grep @regression"
  },
  "keywords": [
    "playwright",
    "browser-extension",
    "qa",
    "automation",
    "testing"
  ],
  "author": "QA Engineer",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0"
  },
  "dependencies": {
    "crypto": "^1.0.1"
  }
}
